{
    "version": 2,
    "builds": [
      {
        "src": "server/api/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "rewrites": [

      { "source": "/(.*)", "destination": "/index.html" }
    ]
  }

